<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ojasvisingh.placeme.AdminJobDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/editJobDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Job Details"
            android:onClick="editJobDetails"/>

        <Button
            android:id="@+id/editProcess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="editProcess"
            android:text="Update Process" />

        <Button
            android:id="@+id/attendanceAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="markAttendance"
            android:text="Attendance" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
